{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicRead",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::${bucket_name}/public/*"
    },
    {
      "Sid": "PutWebsite",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["${deployment_user_arn}"]
      },
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": "arn:aws:s3:::${bucket_name}/public/*"
    }
  ]
}